
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read their own document.
      // Allow reading all user docs for leaderboard functionality.
      allow get: if isSignedIn();
      allow list: if isSignedIn();

      // A user can create their own document.
      // On creation, we can write to the main user doc and the profile subcollection.
      allow create: if isOwner(userId);
      
      // A user can only update their own document.
      allow update: if isOwner(userId);
      
      allow delete: if isOwner(userId);

      match /profile/{profileId} {
        // Profile is 1:1 with user, and the ID should match.
        allow get: if isOwner(userId);
        allow create, update, delete: if isOwner(userId) && profileId == userId;
      }

      match /wellBeing/{wellBeingId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }
    }

    match /houses/{houseId} {
      // All signed-in users can read house data for leaderboards.
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // Writes should be handled by admin/backend functions.
      allow write: if false;
    }

    match /skillTrees/{treeId}/tiers/{tierId} {
        // Skill trees are public reading for all users
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        // Writes should be handled by admin/backend functions.
        allow write: if false;
    }

    match /courses/{courseId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.teacherId || request.auth.uid in resource.data.studentIds);
      allow list: if false; // Don't allow listing all courses
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.teacherId;
    }

    match /projects/{projectId} {
      function isMember() {
        return request.auth.uid == resource.data.authorId || request.auth.uid in resource.data.collaboratorIds;
      }
      allow get: if isSignedIn() && isMember();
      allow list: if false; // Don't allow listing all projects
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && isMember();
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    match /announcements/{announcementId} {
      allow get, list: if true;
      allow write: if false; // Admin only
    }
    
    match /resources/{resourceId} {
      allow get, list: if isSignedIn();
      allow write: if false; // Admin only
    }

    match /ppdbApplications/{appId} {
        allow read, write: if false; // Admin only
    }
  }
}
