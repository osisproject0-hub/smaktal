
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Users can read their own document.
      // Allow reading all user docs for leaderboard & admin functionality.
      allow get: if isSignedIn();
      allow list: if isSignedIn();

      // A user can create their own document.
      allow create: if isOwner(userId);
      
      // A user can only update their own document, but an admin can update any.
      allow update: if isOwner(userId) || isAdmin();
      
      allow delete: if isOwner(userId) || isAdmin();

      match /profile/{profileId} {
        // Profile is 1:1 with user, and the ID should match.
        allow get: if isOwner(userId) || isAdmin();
        allow create, update, delete: if isOwner(userId) && profileId == userId;
      }

      match /wellBeing/{wellBeingId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }
    }

    match /houses/{houseId} {
      // All signed-in users can read house data for leaderboards.
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // Admin can write/update/delete houses.
      allow write: if isAdmin();
    }

    match /skillTrees/{treeId}/tiers/{tierId} {
        // Skill trees are public reading for all users
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        // Writes should be handled by admin/backend functions.
        allow write: if isAdmin();
    }

    match /courses/{courseId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.teacherId || request.auth.uid in resource.data.studentIds);
      allow list: if false; // Don't allow listing all courses
      allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.teacherId;
    }

    match /projects/{projectId} {
      function isMember() {
        return request.auth.uid == resource.data.authorId || request.auth.uid in resource.data.collaboratorIds;
      }
      allow get: if isSignedIn() && isMember();
      allow list: if false; // Don't allow listing all projects
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && isMember();
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    match /announcements/{announcementId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /resources/{resourceId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    match /ppdbApplications/{appId} {
        allow read, write: if false; // Still admin only, but not implemented yet.
    }

    match /learningTopics/{topicId} {
      // All signed-in users can read learning topics.
      allow get, list: if isSignedIn();
      // Admin can manage topics
      allow write: if isAdmin();
    }

    match /quizResults/{resultId} {
      // Users can create, read, update their own quiz results.
      allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if false; // Don't allow deletion for record-keeping.
    }
  }
}
